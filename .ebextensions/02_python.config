container_commands:
  01_migrate:
  command: "source activate && python manage.py migrate --noinput"
  leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
  DJANGO_SETTINGS_MODULE: "CryptoCow.settings"
  "PYTHONPATH": "./CryptoCow"
  "aws:elasticbeanstalk:container:python":
  WSGIPath: CryptoCow/wsgi.py
  NumProcesses: 3
  NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
  "/static/": "www/static/"